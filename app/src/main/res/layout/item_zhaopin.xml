<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/comm_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/list_item_line_padding"
        android:layout_marginRight="@dimen/list_item_line_padding"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/firstitem_margintop"
        android:paddingTop="@dimen/firstitem_margintop">

        <TextView
            android:id="@+id/typename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/disable" />

        <TextView
            android:id="@+id/delbut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="删除"
            android:textColor="@color/del_refuse" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:background="@drawable/list_normal"
            android:gravity="center_vertical"
            android:padding="10dp">

            <TextView
                style="@style/empdetail_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="岗位名称" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingRight="14dp">

                <EditText
                    android:textColorHint="@color/hintcolor"
                    android:id="@+id/jobname_data"
                    style="@style/empdetail_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="必填" />


            </LinearLayout>
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="10dp"
            android:background="@color/line" />

        <RelativeLayout
            android:id="@+id/stime_click"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:background="@drawable/dep_emp_selector"
            android:gravity="center_vertical"
            android:padding="10dp">

            <TextView
                style="@style/empdetail_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="岗位需求" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:hint="必填"
                    android:textColorHint="@color/hintcolor"
                    android:id="@+id/xuqiu_data"
                    style="@style/empdetail_right"
                    android:layout_width="wrap_content"
                    android:layout_marginRight="15dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="10dp"
            android:background="@color/line" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:background="@drawable/dep_emp_selector"
            android:gravity="center_vertical"
            android:padding="10dp">

            <TextView
                style="@style/empdetail_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="招聘人数" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:hint="必填"
                    android:id="@+id/num_data"
                    android:inputType="number"
                    android:textColorHint="@color/hintcolor"
                    style="@style/empdetail_right"
                    android:layout_width="wrap_content"
                    android:layout_marginRight="15dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </RelativeLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="10dp"
            android:background="@color/line" />
        <RelativeLayout
            android:id="@+id/tiaoxintime_click"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:background="@drawable/list_normal"
            android:gravity="center_vertical"
            android:padding="10dp">

            <TextView
                style="@style/empdetail_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="到岗时间" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingRight="6dp">

                <TextView
                    android:hint="必填"
                    android:id="@+id/time_data"
                    android:textColorHint="@color/hintcolor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:src="@drawable/showchid" />
            </LinearLayout>
        </RelativeLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="10dp"
            android:background="@color/line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dep_emp_selector"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:gravity="start"
                style="@style/empdetail_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="岗位描述" />

            <EditText
                android:id="@+id/miaoshu_data"
                style="@style/empdetail_right_multline"
                android:hint="输入岗位描述"
                 />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>