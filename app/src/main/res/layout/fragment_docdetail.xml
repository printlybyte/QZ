<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/comm_bg"
    android:orientation="vertical">

    <include layout="@layout/comm_title"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="@dimen/firstitem_margintop"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/title_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/basetitle"
            android:textSize="@dimen/rightbutton" />

        <TextView
            android:id="@+id/time_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/sign_tag"
            android:textSize="@dimen/comm_help" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/line" />

        <TextView
            android:id="@+id/content_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/comm" />
    </LinearLayout>
<LinearLayout
    android:id="@+id/readerlist_layout"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" android:orientation="vertical">
    <TextView
        android:id="@+id/totalread_data"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/greyline_height"
        android:paddingLeft="12dp"
        android:background="@color/comm_bg"
        android:gravity="center_vertical"
        android:textSize="@dimen/comm_help" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/readerlist"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">
    </android.support.v7.widget.RecyclerView>
    <TextView
        android:text="查看更多阅读成员"
        android:id="@+id/showmoreperson"
        android:drawableRight="@drawable/showmore"
        android:textColor="@color/sign_tag"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_height="45dp" />
</LinearLayout>
</LinearLayout>