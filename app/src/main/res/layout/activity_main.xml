<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/fragmentlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

    </FrameLayout>

    <LinearLayout
        android:id="@+id/bottombar"
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:layout_weight="0"
        android:orientation="horizontal">

        <LinearLayout

            android:id="@+id/messgepage_click"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/message_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/message_normal" />

            <TextView
                android:id="@+id/message_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/bottom_tag_margin"
                android:text="消息"
                android:textSize="@dimen/comm_help2" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/statisticalpage_click"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/statistical_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/statistical_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/bottom_tag_margin"
                android:text="统计"
                android:textSize="@dimen/comm_help2" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/workpage_click"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/workimg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/work_normal" />

            <TextView
                android:id="@+id/work_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/bottom_tag_margin"
                android:text="办公"
                android:textSize="@dimen/comm_help2" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mypage_click"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/my_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/my_normal" />

            <TextView
                android:id="@+id/mytv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/bottom_tag_margin"
                android:text="我的"
                android:textSize="@dimen/comm_help2" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>