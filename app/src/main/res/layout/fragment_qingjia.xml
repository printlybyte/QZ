<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/comm_bg"
    android:orientation="vertical">

    <RelativeLayout style="@style/titlebar">

        <TextView
            android:id="@+id/canel_button"
            style="@style/rightbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/backimg_margin"
            android:text="取消" />


        <TextView
            android:id="@+id/title"
            style="@style/basetitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />

        <TextView
            android:id="@+id/ok_button"
            style="@style/rightbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/backimg_margin"
            android:text="确定" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/type_layout"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:layout_marginTop="@dimen/firstitem_margintop"
                    android:background="@drawable/list_normal"
                    android:gravity="center_vertical"
                    android:padding="10dp">

                    <TextView
                        style="@style/empdetail_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="请假类型" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/type_data"
                            style="@style/empdetail_right"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="必填"
                            android:textColorHint="@color/wait" />

                        <ImageView
                            android:id="@+id/name_black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:src="@drawable/showchid" />
                    </LinearLayout>
                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="10dp"
                    android:background="@color/line" />

                <RelativeLayout
                    android:id="@+id/start_layout"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:background="@drawable/list_normal"
                    android:gravity="center_vertical"
                    android:padding="10dp">

                    <TextView
                        style="@style/empdetail_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="开始时间" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/start_data"
                            style="@style/empdetail_right"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="必填"
                            android:textColorHint="@color/wait" />

                        <ImageView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:src="@drawable/showchid" />
                    </LinearLayout>
                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="10dp"
                    android:background="@color/line" />

                <RelativeLayout
                    android:id="@+id/end_layout"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:background="@drawable/list_normal"
                    android:gravity="center_vertical"
                    android:padding="10dp">

                    <TextView
                        style="@style/empdetail_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="结束时间" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/end_data"
                            style="@style/empdetail_right"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="必填"
                            android:textColorHint="@color/wait" />

                        <ImageView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:src="@drawable/showchid" />
                    </LinearLayout>
                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="10dp"
                    android:background="@color/line" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:background="@drawable/list_normal"
                    android:gravity="center_vertical"
                    android:padding="10dp">

                    <TextView
                        style="@style/empdetail_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="请假天数" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/time_data"
                            style="@style/empdetail_right"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="14dp"
                            android:background="@color/transparent"
                            android:minWidth="100dp" />


                    </LinearLayout>
                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="10dp"
                    android:background="@color/line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/list_normal"
                    android:gravity="start"
                    android:padding="10dp">

                    <TextView
                        style="@style/empdetail_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="请假事由" />


                    <EditText
                        android:id="@+id/reasontext_data"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="@color/transparent"
                        android:gravity="start"
                        android:hint="请输入请假事由"
                        android:padding="3dp"
                        android:textColor="@color/disable"
                        android:textColorHint="@color/sign_tag"
                        android:textSize="@dimen/comm" />
                    <!-- <LinearLayout
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_alignParentRight="true"
                         android:layout_centerVertical="true"
                         android:gravity="center_vertical"
                         android:orientation="horizontal">

                         <TextView
                             android:id="@+id/reason_data"
                             style="@style/empdetail_right"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content" />

                         <ImageView

                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:layout_marginLeft="4dp"
                             android:src="@drawable/showchid" />
                     </LinearLayout>-->
                </LinearLayout>


                <RelativeLayout
                    android:id="@+id/jiaojieren_click"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:layout_marginTop="@dimen/firstitem_margintop"
                    android:background="@drawable/list_normal"
                    android:gravity="center_vertical"
                    android:padding="10dp">

                    <TextView
                        style="@style/empdetail_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="选择交接人" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/jiaojieren_data"
                            style="@style/empdetail_right"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="选择交接人"
                            android:textColorHint="@color/sign_tag" />

                        <ImageView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:src="@drawable/showchid" />
                    </LinearLayout>
                </RelativeLayout>


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/memberlist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/firstitem_margintop"
                    android:background="@color/white"
                    android:padding="20dp"></android.support.v7.widget.RecyclerView>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/copylist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/firstitem_margintop"
                    android:background="@color/white"
                    android:padding="20dp"></android.support.v7.widget.RecyclerView>
            </LinearLayout>

            <include layout="@layout/commloadinglayout" android:layout_width="match_parent" android:layout_height="match_parent"></include>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>