<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:color="@color/list_pressed2"
    tools:targetApi="lollipop">
    <item
        android:left="-2dp"
        android:state_pressed="true"
        android:top="-2dp">
        <shape>
            <solid android:color="@color/list_pressed2" />
            <stroke
                android:width="1px"
                android:color="@color/transparent" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/list_normal" />
            <stroke
                android:width="1px"
                android:color="@color/transparent" />
        </shape>
    </item>
</selector>